<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prgrsbrsignup"

            android:visibility="gone"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/maa" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10sp">

                <EditText
                    android:id="@+id/activity_login_sign_up_edt_ph_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#11000000"
                    android:drawableStart="@drawable/ic_action_user"
                    android:drawableLeft="@drawable/ic_action_user"
                    android:ems="10"
                    android:hint="@string/phonenum"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />
                <android.support.v7.widget.CardView
                    android:id="@+id/activity_log_in_sign_up_btn_login"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/colorGrey"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="10sp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/button_start_verification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GET OTP"
                            android:textColor="@color/colorSoftPink"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/button_resend"
                    android:layout_width="240dp"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content"
                    android:text="Resend OTP"
                    android:textAllCaps="false"
                    android:textColor="@color/colorSoftPink"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:typeface="monospace"
                    app:fontFamily="sans-serif-smallcaps" />


                <EditText
                    android:id="@+id/activity_login_sign_up_edt_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#11000000"
                    android:drawableStart="@drawable/ic_action_user"
                    android:drawableLeft="@drawable/ic_action_user"
                    android:ems="10"
                    android:maxLength="6"
                    android:hint="@string/otphint"
                    android:inputType="textEmailAddress"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />




                <android.support.v7.widget.CardView
                    android:id="@+id/activity_log_in_sign_up_btn_verify_otp"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/colorGrey"
                    android:layout_marginTop="20sp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/button_verify_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/signup"
                            android:textColor="@color/colorSoftPink"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:id="@+id/bottom_navigation"
            app:menu="@menu/bottom_next"
            android:background="@color/colorSoftPink">
        </android.support.design.widget.BottomNavigationView>
    </LinearLayout>

    </RelativeLayout>