<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10sp">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text1"
                    android:textColor="@color/colorSoftPink"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="10sp"
                android:gravity="center">

                <TextView
                    android:id="@+id/vdrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vdrl_test"
                    android:textColor="@color/colorSoftPink"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="10sp"
                android:gravity="center">
                <RadioGroup
                    android:id="@+id/vdrl_test_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/pos_vdrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/positve"
                        android:textColor="@color/colorSoftPink"
                        android:textSize="22sp"
                        android:textStyle="" />

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/neg_vdrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/negative"
                        android:textColor="@color/colorSoftPink"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/nt_vdrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_tested"
                        android:textColor="@color/colorSoftPink"
                        android:textSize="22sp" />


                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="10sp"
                android:gravity="center">

                <TextView
                    android:id="@+id/hiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hiv_test"
                    android:textColor="@color/colorSoftPink"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="10sp"
                android:gravity="center">

                <RadioGroup
                    android:id="@+id/hiv_test_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/pos_hiv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/positve"
                        android:textColor="@color/colorSoftPink"
                        android:textSize="22sp"
                        android:textStyle="" />

                    <RadioButton
                        android:id="@+id/neg_hiv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/negative"
                        android:textColor="@color/colorSoftPink"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/nt_hiv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_tested"
                        android:textColor="@color/colorSoftPink"
                        android:textSize="22sp" />


                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="10sp"
                android:gravity="center">



                <TextView
                    android:id="@+id/sickling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sickling_test"
                    android:textColor="@color/colorSoftPink"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center">




                <RadioGroup
                    android:id="@+id/sickling_test_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/pos_sickling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/positve"
                        android:textColor="@color/colorSoftPink"
                        android:textSize="22sp"
                        android:textStyle="" />

                    <RadioButton
                        android:id="@+id/neg_sickling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/negative"
                        android:textColor="@color/colorSoftPink"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/nt_sickling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_tested"
                        android:textColor="@color/colorSoftPink"
                        android:textSize="22sp" />


                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/bottom_navigation"
            app:menu="@menu/bottom_previous_next"
            android:background="@color/colorSoftPink">
        </android.support.design.widget.BottomNavigationView>
    </LinearLayout>
</RelativeLayout>