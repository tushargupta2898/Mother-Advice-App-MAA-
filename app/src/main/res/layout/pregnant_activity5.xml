<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10sp">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text1"
            android:textColor="@color/colorSoftPink"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center">


        <TextView
        android:id="@+id/prev_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prev"
        android:textColor="@color/colorSoftPink"
        android:textSize="24sp"
        android:textStyle="bold|italic" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center">


        <TextView
        android:id="@+id/complexity_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_code"
        android:textColor="@color/colorSoftPink"
        android:textSize="24sp"
        android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center">

        <EditText
        android:id="@+id/prev_com_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/com_code_hint"
        android:inputType="date" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center">


        <TextView
        android:id="@+id/bef_result_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_result_code"
        android:textColor="@color/colorSoftPink"
        android:textSize="24sp"
        android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center"
            android:orientation="horizontal">

        <RadioGroup
        android:id="@+id/code_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <RadioButton
                android:layout_weight="1"
            android:id="@+id/alive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_alive"
            android:textColor="@color/colorSoftPink"
            android:textSize="22sp"
            android:textStyle="" />

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_dead"
            android:textColor="@color/colorSoftPink"
            android:textSize="22sp" />
        </RadioGroup>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center">

    <TextView
        android:id="@+id/bef_prev_info"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:text="@string/bef_prev"
        android:textColor="@color/colorSoftPink"
        android:textSize="24sp"
        android:textStyle="bold|italic"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center">


    <TextView
        android:id="@+id/bef_complexity_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_code"
        android:textColor="@color/colorSoftPink"
        android:textSize="24sp"
        android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center">
    <EditText
        android:id="@+id/bef_prev_com_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/com_code_hint"
        android:inputType="date" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center">


    <TextView
        android:id="@+id/result_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_result_code"
        android:textColor="@color/colorSoftPink"
        android:textSize="24sp"
        android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:gravity="center">

    <RadioGroup
        android:id="@+id/before_code_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/alive_bef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_alive"
            android:textColor="@color/colorSoftPink"
            android:textSize="22sp" />

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/death_bef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_dead"
            android:textColor="@color/colorSoftPink"
            android:textSize="22sp" />
    </RadioGroup>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/bottom_navigation"
            app:menu="@menu/bottom_previous_next"
            android:background="@color/colorSoftPink">
        </android.support.design.widget.BottomNavigationView>
    </LinearLayout>


</RelativeLayout>